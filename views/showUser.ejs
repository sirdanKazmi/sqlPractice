<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>All Users</title>
    <style>
      :root {
        --bg: #0b0c0f; /* base for dark header gradient */
        --page: #f6f7fb; /* app background */
        --card: #ffffff; /* card background */
        --text: #111827; /* high-contrast text */
        --muted: #6b7280; /* subdued text */
        --primary: #6d5efc; /* brand accent */
        --primary-600: #5a4aec;
        --ring: rgba(109, 94, 252, 0.25);
        --shadow: 0 12px 30px rgba(17, 24, 39, 0.08);
        --radius: 16px;
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --page: #0b0e14;
          --card: #0f1420;
          --text: #e5e7eb;
          --muted: #9aa4b2;
          --shadow: 0 12px 30px rgba(0, 0, 0, 0.35);
        }
      }

      * {
        box-sizing: border-box;
      }
      html,
      body {
        height: 100%;
      }
      body {
        margin: 0;
        font: 14px/1.45 system-ui, -apple-system, Segoe UI, Roboto, Arial,
          sans-serif;
        background: var(--page);
        color: var(--text);
      }

      /* --- App Header --- */
      .app-header {
        background: linear-gradient(
            180deg,
            rgba(29, 78, 216, 0.14),
            rgba(109, 94, 252, 0.12)
          ),
          radial-gradient(
            1200px 400px at 10% -10%,
            rgba(109, 94, 252, 0.28),
            transparent 60%
          ),
          radial-gradient(
            1000px 400px at 90% -10%,
            rgba(29, 78, 216, 0.2),
            transparent 60%
          ),
          var(--page);
        border-bottom: 1px solid rgba(109, 94, 252, 0.12);
      }
      .wrap {
        max-width: 1160px;
        margin: 0 auto;
        padding: 28px 18px;
      }
      .headline {
        display: flex;
        align-items: center;
        gap: 14px;
      }
      .headline h1 {
        font-size: 22px;
        font-weight: 700;
        margin: 0;
        letter-spacing: 0.2px;
      }
      .badge {
        font-size: 12px;
        color: #fff;
        background: var(--primary);
        padding: 4px 8px;
        border-radius: 999px;
      }

      /* --- Toolbar --- */
      .toolbar {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        margin-top: 14px;
        align-items: center;
      }
      .search {
        position: relative;
        flex: 1 1 320px;
      }
      .search input {
        width: 100%;
        padding: 12px 40px 12px 14px;
        border: 1px solid rgba(109, 94, 252, 0.18);
        background: var(--card);
        color: var(--text);
        border-radius: 12px;
        box-shadow: var(--shadow);
        outline: none;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
      }
      .search input:focus {
        border-color: var(--primary);
        box-shadow: 0 0 0 6px var(--ring);
      }
      .search .icon {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        opacity: 0.6;
      }

      .actions {
        display: flex;
        gap: 8px;
        margin-left: auto;
      }
      .btn {
        appearance: none;
        border: 1px solid rgba(109, 94, 252, 0.18);
        background: var(--card);
        color: var(--text);
        padding: 10px 12px;
        border-radius: 12px;
        cursor: pointer;
        box-shadow: var(--shadow);
        font-weight: 600;
        font-size: 13px;
        transition: transform 0.06s ease, box-shadow 0.2s ease,
          background 0.2s ease;
      }
      .btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 12px 26px rgba(17, 24, 39, 0.12);
      }
      .btn:active {
        transform: translateY(0);
      }
      .btn--primary {
        background: var(--primary);
        color: #fff;
        border-color: transparent;
      }
      .btn--primary:hover {
        background: var(--primary-600);
      }
      .btn--ghost {
        background: transparent;
      }

      /* --- Content --- */
      .content {
        padding: 22px 18px 40px;
      }

      .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 18px;
        align-items: stretch;
      }

      .card {
        background: var(--card);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        padding: 18px;
        display: grid;
        grid-template-rows: auto auto 1fr auto;
        gap: 10px;
        position: relative;
        border: 1px solid rgba(109, 94, 252, 0.1);
        transition: transform 0.15s ease, box-shadow 0.2s ease,
          border-color 0.2s ease;
      }
      .card:hover {
        transform: translateY(-2px);
        box-shadow: 0 16px 36px rgba(17, 24, 39, 0.15);
        border-color: rgba(109, 94, 252, 0.2);
      }

      .avatar-wrap {
        display: flex;
        justify-content: center;
      }
      .avatar {
        width: 92px;
        height: 92px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid rgba(109, 94, 252, 0.25);
        box-shadow: inset 0 0 0 3px #fff;
        background: #fff;
      }

      .name {
        font-size: 17px;
        font-weight: 700;
        text-align: center;
      }
      .email {
        font-size: 13px;
        color: var(--muted);
        text-align: center;
        word-break: break-all;
      }

      .meta {
        display: grid;
        grid-template-columns: 1fr;
        gap: 6px;
        background: linear-gradient(
          180deg,
          rgba(109, 94, 252, 0.06),
          transparent
        );
        padding: 10px;
        border-radius: 12px;
        font-size: 13px;
        color: var(--muted);
      }
      .meta strong {
        color: var(--text);
        font-weight: 700;
      }

      .row {
        display: flex;
        gap: 10px;
        align-items: center;
        justify-content: center;
      }
      .pill {
        font-size: 11px;
        color: #fff;
        background: linear-gradient(135deg, #6d5efc, #3b82f6);
        padding: 4px 8px;
        border-radius: 999px;
        letter-spacing: 0.2px;
        box-shadow: var(--shadow);
      }

      .id {
        font-size: 12px;
        color: var(--muted);
        margin-top: 2px;
        text-align: center;
        user-select: all;
        word-break: break-all;
      }

      .card-actions {
        display: flex;
        gap: 8px;
        justify-content: center;
        margin-top: 8px;
      }
      .chip {
        font-size: 12px;
        padding: 8px 10px;
        border-radius: 10px;
        border: 1px solid rgba(109, 94, 252, 0.2);
        background: transparent;
        color: var(--text);
        cursor: pointer;
        transition: background 0.2s ease, transform 0.06s ease;
      }
      .chip:hover {
        background: rgba(109, 94, 252, 0.08);
        transform: translateY(-1px);
      }
      .chip--danger {
        border-color: rgba(239, 68, 68, 0.35);
        color: #ef4444;
      }
      .chip--danger:hover {
        background: rgba(239, 68, 68, 0.08);
      }

      /* Empty state */
      .empty {
        text-align: center;
        padding: 60px 16px;
        color: var(--muted);
      }

      /* Utilities */
      .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 1px, 1px);
        white-space: nowrap;
        border: 0;
      }
    </style>
  </head>
  <body>
    <!-- Header -->
    <header class="app-header">
      <div class="wrap">
        <div class="headline" role="heading" aria-level="1">
          <h1>All Users</h1>
          <span class="badge" aria-label="Total users"
            ><%= result?.length || 0 %></span
          >
        </div>

        <div class="toolbar" role="region" aria-label="User tools">
          <div class="search">
            <input
              id="q"
              type="search"
              placeholder="Search by username or email…"
              aria-label="Search users"
              autocomplete="off"
            />
            <svg
              class="icon"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              aria-hidden="true"
            >
              <path
                d="M21 21l-4.35-4.35M10.5 18a7.5 7.5 0 1 1 0-15 7.5 7.5 0 0 1 0 15Z"
                stroke="currentColor"
                stroke-width="1.6"
                stroke-linecap="round"
              />
            </svg>
          </div>
          <div class="actions">
            <button
              class="btn btn--ghost"
              id="copy-emails"
              title="Copy all emails"
            >
              Copy Emails
            </button>
            <button class="btn btn--primary" id="new-user">+ New User</button>
          </div>
        </div>
      </div>
    </header>

    <!-- Content -->
    <main class="content wrap" id="grid-wrap">
      <div id="empty" class="empty" hidden>
        <p>No users match your search.</p>
      </div>

      <div class="grid" id="grid" role="list" aria-label="User list">
        <% for (u of result) { %>
        <article
          class="card"
          role="listitem"
          data-name="<%= (u.username || '').toLowerCase() %>"
          data-email="<%= (u.email || '').toLowerCase() %>"
        >
          <div class="avatar-wrap">
            <img
              class="avatar"
              src="<%= u.avatar %>"
              alt="Avatar of <%= u.username %>"
            />
          </div>

          <header class="name" title="<%= u.username %>">
            <%= u.username %>
          </header>
          <div class="email" title="<%= u.email %>"><%= u.email %></div>

          <section class="meta">
            <div><strong>Birthdate:</strong> <%= u.birthdateFmt %></div>
            <div><strong>Registered:</strong> <%= u.registeredAtFmt %></div>
            <div class="row" aria-label="Quick info">
              <span class="pill" title="User ID length"
                >ID: <%= (u.userId || '').slice(0, 6) %>…</span
              >
            </div>
          </section>

          <div class="id" title="Click to copy" data-copy="<%= u.userId %>">
            <%= u.userId %>
          </div>

          <footer class="card-actions" aria-label="Actions">
            <form action="/user/<%= u.userId %>/edit" method="get">
              <button class="chip" type="submit">Edit</button>
            </form>

            <form
              action="/user/<%= u.userId %>?_method=DELETE"
              method="post"
              onsubmit="return confirm('Delete this user?')"
            >
              <% if (typeof csrfToken !== 'undefined') { %>
              <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
              <% } %>
              <button
                class="chip chip--danger"
                type="submit"
                data-action="delete"
                data-id="<%= u.userId %>"
              >
                Delete
              </button>
            </form>
          </footer>
        </article>
        <% } %>
      </div>
    </main>

    <script>
      // --- Client-side UX helpers (agnostic to your backend) ---
      (function () {
        const $ = (s, r = document) => r.querySelector(s);
        const $$ = (s, r = document) => Array.from(r.querySelectorAll(s));

        // Search filter
        const input = $("#q");
        const grid = $("#grid");
        const empty = $("#empty");
        function applyFilter() {
          const q = (input.value || "").trim().toLowerCase();
          let visible = 0;
          $$(".card", grid).forEach((card) => {
            const match =
              card.dataset.name.includes(q) || card.dataset.email.includes(q);
            card.style.display = match ? "" : "none";
            if (match) visible++;
          });
          empty.hidden = visible !== 0;
        }
        input.addEventListener("input", applyFilter);

        // Copy all emails
        $("#copy-emails").addEventListener("click", async () => {
          try {
            const emails = $$(".email", grid)
              .map((e) => e.textContent.trim())
              .filter(Boolean)
              .join(", ");
            await navigator.clipboard.writeText(emails);
            toast(`Copied ${emails.split(", ").length} email(s)`);
          } catch (e) {
            toast("Copy failed");
          }
        });

        // Copy on ID click
        grid.addEventListener("click", async (e) => {
          const idEl = e.target.closest(".id");
          if (idEl && idEl.dataset.copy) {
            try {
              await navigator.clipboard.writeText(idEl.dataset.copy);
              toast("User ID copied");
            } catch {}
          }
        });
      })();
    </script>
  </body>
</html>
